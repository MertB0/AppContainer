@model             List<AppContainer.Models.AppContainerModel>
@{
    ViewData["Title"] = "Apps";
}

<div class="container">
    

</div>

<div class="container-fluid">
    <div class="row text-center justify-content-center">
        @foreach (var app in Model)
        {
            <div class="col text-center mt-5">

                <a href="@app.AppsController">
                    <div class="wrap" >
                        <img style=" box-shadow: 0 0 450px 0 @app.ShadowColor;"  src="@app.Image" class="app" />
                    </div>
                </a>
            
            </div>
        }

    </div>
</div>
